@model Produto
@{
    ViewData["Title"] = "Editar Produto";
}

<div class="text-center">

    <h1 class="display-4">Editar Produto</h1>

</div>

<form asp-controller="Produto" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do produto">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="medidas">Medidas</label>
        <input type="text" asp-for="Medidas" class="form-control" placeholder="Digite as medidas do produto">
        @Html.ValidationMessageFor(x => x.Medidas)
    </div>
    <div class="form-group">
        <label for="unidade">Unidade</label>
        <input type="text" asp-for="Unidade" class="form-control" placeholder="Digite a unidade do produto">
        @Html.ValidationMessageFor(x => x.Unidade)
    </div>
    <div class="form-group">
        <label for="pecasPorUnidade">Peças por Unidade</label>
        <input type="number" asp-for="PecasPorUnidade" class="form-control" placeholder="Digite o número de peças por unidade do produto">
        @Html.ValidationMessageFor(x => x.PecasPorUnidade)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
</form>
