@model Maquina
@{
    ViewData["Title"] = "Editar Máquina";
}

<div class="text-center">

    <h1 class="display-4">Editar Maquina</h1>

</div>

<form asp-controller="Maquina" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome da máquina">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="nome">Marca</label>
        <input type="text" asp-for="Marca" class="form-control" placeholder="Digite a marca da máquina">
        @Html.ValidationMessageFor(x => x.Marca)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Maquina" asp-action="Index" role="button">Voltar</a>
</form>
