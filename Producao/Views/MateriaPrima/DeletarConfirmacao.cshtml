@model MateriaPrima
@{
    ViewData["Title"] = "Apagar Matéria-Prima";
}

<div class="text">
    <h3>Realmente deseja apagar a matéria-prima (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="MateriaPrima" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="MateriaPrima" asp-action="Deletar" asp-route-id="@Model.Id">Confirmar exclusão</a>
